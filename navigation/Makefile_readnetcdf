# Fortran compiler name
FORCMP = gfortran

SOURCE = readnetcdf_DBZ_VR.f90


# Fortran compiler flags
FFLAGS = 
LDFLAGS = 

# Libraries
LIBS = -L/usr/local/netcdf3/lib -lnetcdf -lnetcdff 
INCLUDES = -I/usr/local/netcdf3/include

# Name of executable file
EXEC = readnetcdf_DBZ_VR 


${EXEC}: ${SOURCE}
	${FORCMP} ${FFLAGS} ${LDFLAGS} -o ${EXEC} ${SOURCE} ${LIBS} ${INCLUDES}



clean:
	rm -f core *.o *~ ${EXEC}

